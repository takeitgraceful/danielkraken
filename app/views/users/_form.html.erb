<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'white3 form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'white3 form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'white3 form-control' %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'white3 form-control' %>

  <%= f.submit yield(:button_text), class: "btn-lg gold3 white3" %>
<% end %>
