<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.label :characterfirstname,"First Name" %>
  <%= f.text_field :characterfirstname, class: 'form-control' %>

  <%= f.label :characterlastname,"Last Name" %>
  <%= f.text_field :characterlastname, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn-lg gold3 white3" %>
<% end %>
